{
  "name": "yae-modernize-tailwind",
  "version": "1.0.2",
  "description": "A powerful CLI tool to automate migration of Tailwind CSS classes to newer, more efficient conventions",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "yae-modernize-tailwind": "./dist/index.js"
  },
  "files": [
    "dist/index.js",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "start": "node dist/index.js",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier 'src/**/*.ts' --write",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "css",
    "migration",
    "cli",
    "modernize",
    "refactor",
    "utility-classes",
    "automation",
    "frontend",
    "web-development"
  ],
  "author": "Azula9713",
  "license": "MIT",
  "homepage": "https://github.com/Yae-Tools/yae-modernize-tailwind#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yae-Tools/yae-modernize-tailwind.git"
  },
  "bugs": {
    "url": "https://github.com/Yae-Tools/yae-modernize-tailwind/issues"
  },
  "dependencies": {
    "@types/node": "^24.0.10",
    "chalk": "^5.4.1",
    "glob": "^11.0.3",
    "inquirer": "^9.2.23",
    "ora": "^8.2.0",
    "simple-git": "^3.20.0",
    "typescript": "^5.8.3",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/chalk": "^2.2.4",
    "@types/glob": "^9.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/ora": "^3.2.0",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "rollup": "^4.44.1",
    "vitest": "^3.2.4"
  }
}
